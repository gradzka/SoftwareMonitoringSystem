@if (Session["Logged"] != "Admin")
{
    @model SoftwareMonitoringSystem.Models.Login
    {
        ViewBag.Title = "Panel logowania";
    }

    <div class="jumbotron">
        <div class="container">
            <h2>System monitorujący</h2>
            <p class="lead">oprogramowanie komputerów w&nbspsieci lokalnej</p>
        </div>
    </div>
    using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        if (ViewBag.Alert != null)
        {
            <div class="alert alert-danger" style="text-align:center; margin-bottom:15px">
                @ViewBag.Alert
            </div>
        }

        <div style="display:flex; flex-direction:column; align-items: center;">
            <div class="form-group-10px" style="margin-bottom:5px;margin-top:5px;">
                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login", @style = "min-width:250px;", @required = "" } })
            </div>

            <div class="form-group-10px" style="margin-bottom:5px;margin-top:5px;">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Hasło", @style = "min-width:250px;", @required = "" } })
            </div>
            <div class="form-group-10px" style="margin-bottom:5px;margin-top:5px;">
                <button type="submit" class="btn btn-primary" style="min-width:250px;"><b>Zaloguj&nbsp</b><span class="glyphicon glyphicon-log-in"></span></button>
            </div>
        </div>
    }
}
else
{
    @Html.Partial("_MainAdmin")
}